<div class="well">
<%= link_to "New Expense", expenses_new_path, class: "btn btn-primary" %>
<%= link_to "Back", root_path, class: "btn btn-primary" %>
</div>
<table class="table table-bordered table-striped">
    <% if @expenses.count == 0 %>
      <tr>
        <td colspan="3">
          No expense found.  Click the button above to add a new one.
        </td>
      </tr>
    <% else %>
  <thead>
    <tr>
      <th>Type Of Expense</th>
      <th>Amount</th>
      <th>Date</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.type_of_income_and_expense %></td>
          <td><%= expense.amount %></td>
          <td><%= expense.enter_date %></td>
          <td><%= link_to "Show", expenses_show_path(expense), class: "btn btn-default" %></td>
          <td><%= link_to "Edit", expenses_edit_path(expense), class: "btn btn-default" %></td>
          <td><%= link_to 'Delete', transaction_path(expense), :method=>:delete, class: "btn btn-danger", :data => {:confirm => 'Are you sure?'} %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>