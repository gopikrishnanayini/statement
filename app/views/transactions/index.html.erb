<div class="well">
<%= link_to "New Income", new_transaction_path, class: "btn btn-primary" %>
</div>
<table class="table table-bordered table-striped">
    <% if @transactions.count == 0 %>
      <tr>
        <td colspan="3">
          No income found.  Click the button above to add a new one.
        </td>
      </tr>
    <% else %>
  <thead>
    <tr>
      <th>Type Of Income</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
      <% @transactions.each do |income| %>
        <tr>
          <td><%= income.type_of_income %></td>
          <td><%= link_to "Edit", edit_transaction_path(income), class: "btn btn-default" %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>