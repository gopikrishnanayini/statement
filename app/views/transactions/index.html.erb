<div class="well">
<%= link_to "Back", root_path, class: "btn btn-primary" %>
</div>
<table class="table table-bordered table-striped">
    <% if @transactions.count == 0 %>
      <tr>
        <td colspan="3">
          No transaction found.  Click the button above to add a new one.
        </td>
      </tr>
    <% else %>
  <thead>
    <tr>
      <th>Type Of Income</th>
      <th>Amount</th>
      <th>Date</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.type_of_income_and_expense %></td>
          <td><%= transaction.amount %></td>
          <td><%= transaction.enter_date %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>